<Page x:Class="SRS.Faculdade.APP.View.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SRS.Faculdade.APP.View"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="300">
            <Image Source="/SRS.Faculdade.APP;component/View/Images/Imglogin.png" Width="80" Height="80"/>
            <TextBlock Text="Login:"/>
            <TextBox x:Name="email" Height="30" Width="300" />
            <TextBlock Text="Senha:"/>
            <TextBox x:Name="senha" Height="30" Width="300"/>
            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center" Foreground="Red" x:Name="TxtError"/>
            <Button Click="Button_Click" Content="Entrar" Height="30" Width="100" Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</Page>
